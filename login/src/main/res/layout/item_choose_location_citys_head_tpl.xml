<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/window_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.4dp"
        android:layout_marginTop="19.2dp"
        android:paddingBottom="7.1dp"
        android:text="定位所在地区"
        android:textColor="@color/text_bg90"
        android:textSize="13.4sp" />
    <TextView
        android:id="@+id/loc_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/default_button"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/icon_right_arrow"
        android:minHeight="48dp"
        android:paddingLeft="15.4dp"
        android:paddingRight="15.6dp"
        android:textColor="@color/text_bg20"
        android:textSize="15.4sp" />
</LinearLayout>