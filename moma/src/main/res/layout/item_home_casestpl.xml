<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.7dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="139.2dp"
            android:scaleType="centerCrop"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="14.4dp"
            android:paddingLeft="9.6dp"
            android:paddingTop="15.4dp" >

            <midian.baselib.widget.CircleImageView
                android:id="@+id/head"
                android:layout_width="38.4dp"
                android:layout_height="38.4dp"
                android:background="@drawable/head1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.6dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="精彩案例一"
                    android:textColor="#FF030303"
                    android:textSize="15.4sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.1dp"
                    android:text="serve.上海管家杂货铺"
                    android:textColor="#FF444444"
                    android:textSize="11.5sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>