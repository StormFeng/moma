<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FF6C6C"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="提示：每个月按30天计算"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/month_linear"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="购买月份数："
            android:textColor="#FF202020"
            android:textSize="15.4sp" />

        <TextView
            android:id="@+id/month_detele_renew"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="35dp"
            android:background="@drawable/month_detele_n" />

        <TextView
            android:id="@+id/month_count_renew"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="1"
            android:textColor="#ff9500"
            android:textSize="15.4sp" />

        <TextView
            android:id="@+id/month_add_renew"
            android:layout_width="30dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:background="@drawable/month_add_gree" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="购买时间："
            android:textColor="#FF202020"
            android:textSize="15.4sp" />
        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="2016-03-01"
            android:textColor="#FF202020"
            android:textSize="15.4sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:text="~"
            android:textColor="#FF202020"
            android:textSize="15.4sp" />
        <TextView
            android:id="@+id/end_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="2016-03-01"
            android:textColor="#FF202020"
            android:textSize="15.4sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/confirm_bt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="确定"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="#01A0E9"/>

</LinearLayout>