<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>

            <LinearLayout
                android:id="@+id/change_pwd_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="修改密码"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/c_divider_line"/>

            <LinearLayout
                android:id="@+id/push_notification_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="推送通知"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <midian.baselib.tooglebutton.ToggleButton
                    android:id="@+id/toggle_button"
                    android:layout_width="49dp"
                    android:layout_height="29.8dp"
                    android:background="#FF4CD864"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="37.8dp"
                android:layout_marginLeft="15.4dp"
                android:layout_marginTop="11.5dp"
                android:text="您可以设置是否接收系统推送"
                android:textColor="#FF909090"
                android:textSize="13.4sp"
                android:visibility="gone"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>
            <LinearLayout
                android:id="@+id/update_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="检查更新"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <TextView
                    android:id="@+id/version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="检查更新"
                    android:gravity="right"
                    android:paddingRight="10dp"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.4sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>
            <LinearLayout
                android:id="@+id/back_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="意见反馈"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>

            <LinearLayout
                android:id="@+id/share_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="分享好友"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15.4dp"
                android:background="@drawable/c_divider_line"/>

            <LinearLayout
                android:id="@+id/about_ll"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="1dp"
                android:background="@drawable/default_button"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="15.4dp"
                android:paddingRight="15.6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="关于我们"
                    android:textColor="@color/text_bg20"
                    android:textSize="15.4sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/icon_right_arrow"
                    android:scaleType="centerCrop"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/c_divider_line"/>

            <Button
                android:id="@+id/cancel"
                android:layout_width="210dp"
                android:layout_height="41.3dp"
                android:layout_gravity="center"
                android:layout_marginBottom="68.8dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/orange_radius_button_bg"
                android:text="退出登录"
                android:textColor="#FFFFFFFF"
                android:textSize="17.3sp"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>