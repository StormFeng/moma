<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/item_ll"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="11.5dp"
        android:paddingRight="16.3dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/c_divider_line" />
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.5dp"
            android:layout_marginRight="6.7dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="18.5dp"
            android:paddingTop="18.5dp">

            <ImageView
                android:id="@+id/select_image"
                android:layout_width="19.2dp"
                android:layout_height="19.2dp"
                android:background="@drawable/icon_discount" />

            <TextView
                android:id="@+id/discount_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:text="自定义"
                android:textColor="#FF030303"
                android:textSize="13.4sp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/discount_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="现在购买6个月即优惠1000元哦，马上抢购吧!"
                android:textColor="@color/text_bg60"
                android:textSize="13.4sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>