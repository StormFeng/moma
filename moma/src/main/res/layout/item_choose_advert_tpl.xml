<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="9.5dp">

        <ImageView
            android:id="@+id/image_iv"
            android:layout_width="160dp"
            android:layout_height="98.9dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="11.5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.4dp"
                android:maxLines="2"
                android:text="广州珠江新城地铁站东侧墙体广告位"
                android:textColor="#FF030303"
                android:textSize="13.4sp"/>

            <TextView
                android:id="@+id/start_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.5dp"
                android:maxLines="2"
                android:text="2016年05月01日 起"
                android:textColor="@color/text_bg90"
                android:textSize="11.5sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14.4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离875m"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>


                <TextView
                    android:id="@+id/money_tv"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="¥00.00"
                    android:textColor="#FFF49A00"
                    android:textSize="13.4sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.3dp"
                    android:text="元/月"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>