<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.7dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="139.2dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/saved_ll"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="9.6dp"
            android:layout_marginTop="9.6dp"
            android:background="@drawable/icon_zan_n_bg"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/like_iv"
                android:layout_width="15.4dp"
                android:layout_height="12dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/icon_zan_n"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/like_conunt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="11.5sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/image"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="9.6dp">

            <midian.baselib.widget.CircleImageView
                android:id="@+id/head"
                android:layout_width="38.4dp"
                android:layout_height="38.4dp"
                android:background="@drawable/head1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.6dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="精彩案例一"
                    android:textColor="#FF030303"
                    android:textSize="15.4sp"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5.1dp"
                    android:text="serve.上海管家杂货铺"
                    android:textColor="#FF444444"
                    android:textSize="11.5sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/no_item"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="暂时没有广告案例!!"/>
    </LinearLayout>
</LinearLayout>