<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_button"
    android:id="@+id/item_ll"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7.7dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="7.7dp"
        android:paddingRight="7.7dp"
        android:paddingTop="7.7dp" >

        <!-- 订单的图片、标题、价格 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF4F4F4"
            android:orientation="horizontal"
            android:padding="7dp" >

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_bg"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="7.7dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="广告位标题"
                    android:textColor="#FF030303"
                    android:textSize="13.4sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品价格:"
                        android:textColor="@color/text_bg60"
                        android:textSize="13.4sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="¥"
                        android:textColor="#FFF49A00"
                        android:textSize="13.4sp" />

                    <TextView
                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="000"
                        android:textColor="#FFF49A00"
                        android:textSize="15.4sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="类型"
                android:textColor="@color/text_bg20"
                android:textSize="13.4sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ad_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电梯"
                android:textColor="@color/text_bg90"
                android:textSize="13.4sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/c_divider_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="位置"
                android:textColor="@color/text_bg20"
                android:textSize="13.4sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/ad_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左"
                android:textColor="@color/text_bg90"
                android:textSize="13.4sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/c_divider_line" />
        <!-- 开始结束时间、价钱 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="15.4dp"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购买时间"
                android:textColor="@color/text_bg20"
                android:textSize="13.4sp" />
            <TextView
                android:id="@+id/days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" (共0月)"
                android:textColor="@color/text_bg90"
                android:textSize="13.4sp" />
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/buy_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFF5F5F5"
                android:padding="7.7dp"
                android:textColor="@color/text_bg60"
                android:text="2016-05-05"
                android:textSize="12.5sp" />


        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15.4dp"
            android:background="@drawable/c_divider_line" />
    </LinearLayout>
</LinearLayout>