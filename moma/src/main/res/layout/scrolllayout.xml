<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="21dp"
            android:paddingLeft="9.6dp"
            android:paddingRight="9.6dp"
            android:paddingTop="8.6dp" >

            <!-- 广告位顶部两个推荐位置 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/image1"
                    android:layout_width="0dp"
                    android:layout_height="98.9dp"
                    android:layout_weight="1"
                    android:background="#FFCCCCCC"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="0dp"
                    android:layout_height="98.9dp"
                    android:layout_marginLeft="8.6dp"
                    android:layout_weight="1"
                    android:background="#FFCCCCCC"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- 地图模式 -->

            <LinearLayout
                android:id="@+id/map_model"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21.1dp"
                android:background="@drawable/default_button"
                android:orientation="horizontal" >

                <midian.baselib.widget.CircleImageView
                    android:layout_width="38.4dp"
                    android:layout_height="38.4dp"
                    android:background="@drawable/icon_map_model" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.1dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="地图模式"
                        android:textColor="#FF030303"
                        android:textSize="15.4sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="在地图上查看您附近 广告位"
                        android:textColor="#FF444444"
                        android:textSize="11.5sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- 合作流程 -->

            <LinearLayout
                android:id="@+id/cooperation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21.1dp"
                android:background="@drawable/default_button"
                android:orientation="horizontal" >

                <midian.baselib.widget.CircleImageView
                    android:layout_width="38.4dp"
                    android:layout_height="38.4dp"
                    android:background="@drawable/icon_cooperation_process" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.1dp"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="合作流程"
                        android:textColor="#FF030303"
                        android:textSize="15.4sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:text="这么多广告位?是否您也来一个广告做宣传?"
                        android:textColor="#FF444444"
                        android:textSize="11.5sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.7dp"
            android:background="@color/white"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/f4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/tab_line_bg"
                    android:gravity="center"
                    android:text="全部类型"
                    android:textColor="#FFF49A00"
                    android:textSize="15.4sp" />

                <TextView
                    android:id="@+id/f5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/tab_line_bg"
                    android:gravity="center"
                    android:text="平面类型"
                    android:textColor="#FFF49A00"
                    android:textSize="15.4sp" />

                <TextView
                    android:id="@+id/f6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableBottom="@drawable/tab_line_bg"
                    android:gravity="center"
                    android:text="视频类型"
                    android:textColor="#FFF49A00"
                    android:textSize="15.4sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4.8dp"
                android:background="@drawable/c_divider_line" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/window_bg" />

</LinearLayout>