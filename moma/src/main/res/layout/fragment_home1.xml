<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@id/my_content_view"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"
              android:orientation="vertical"
             >

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"/>

    <com.midian.moma.customview.DimedView
        android:id="@+id/dimeView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <midian.baselib.widget.PagerSlidingTabStripForOther
            android:id="@+id/tabs1"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="0dp"
            android:layout_height="42dip"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            app:pstsDividerColor="@color/dp_divider_line"
            app:pstsDividerPadding="10dp"
            app:pstsIndicatorColor="#47a0db"
            app:pstsIndicatorHeight="2dip"
            app:pstsShouldExpand="false"
            app:pstsTabPaddingLeftRight="20dip"
            app:pstsUnderlineColor="@color/dp_divider_line"
            app:pstsUnderlineHeight="0px"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@drawable/c_divider_line"/>

        <TextView
            android:id="@+id/edit"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/text_bg20"
            android:textSize="30sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"/>


    <!--<FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
    <midian.baselib.widget.BannerView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"/>


</LinearLayout>