<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <midian.baselib.widget.BaseLibTopbarView
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="15.4dp" />

    <EditText
        android:id="@+id/content_et"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:hint="@string/hint_please_input_nickname"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/text_bg20"
        android:textSize="15.4sp" />
    <LinearLayout
        android:id="@+id/invoiceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:id="@+id/personal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableRight="@drawable/select_checkbox"
            android:padding="15dip"
            android:text="个人"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider_line" />

        <TextView
            android:id="@+id/company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:drawableRight="@drawable/select_checkbox"
            android:padding="15dip"
            android:text="公司"
            android:textColor="@color/text_bg20"
            android:textSize="15.4sp" />
    </LinearLayout>
</LinearLayout>