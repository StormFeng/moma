<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31.7dp"
        android:layout_marginRight="31.7dp"
        android:paddingBottom="18.2dp"
        android:background="@drawable/yayi_dialog_confirm_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="弹窗标题"
            android:background="@drawable/sign_dialog_title_bg"
            android:textColor="@color/white"
            android:textSize="17.3sp"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="26.7dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/icon_sign_img"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.2dp"
            android:text="弹窗内容区域"
            android:textColor="@color/text_bg60"
            android:textSize="15.4sp"/>

        <EditText
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="center"
            android:padding="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="@color/black"
            android:textSize="@dimen/textSP13"
            android:visibility="gone"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_marginTop="15dp"
            android:background="@color/divide_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/confirm_bt"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/short_dialog_button"
                android:gravity="center"
                android:text="确定"
                android:textSize="17.3sp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>