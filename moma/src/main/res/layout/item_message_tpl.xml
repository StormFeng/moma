<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/window_bg"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="14.5dp"
        android:paddingLeft="11.5dp"
        android:paddingRight="11.5dp"
        android:paddingTop="18.2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_reddot"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="您的订单下单成功啦！"
                android:textColor="@color/text_bg20"
                android:textSize="14.4sp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.7dp"
            android:layout_marginRight="19.2dp"
            android:layout_marginTop="16.7dp"
            android:text="订单号：MMCM201608011123 下单成功，您现在可以付款了"
            android:textColor="@color/text_bg20"
            android:textSize="13.4sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="15.5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.7dp"
                android:layout_weight="1"
                android:text="2015-01-01 16：00"
                android:textColor="@color/text_bg60"
                android:textSize="11.5sp"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/default_button"
                android:drawablePadding="7.7dp"
                android:drawableRight="@drawable/icon_right_arrow"
                android:text="立即支付"
                android:textColor="#FFF49A00"
                android:textSize="13.4sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/name_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="14.5dp"
        android:paddingLeft="11.5dp"
        android:paddingRight="11.5dp"
        android:paddingTop="18.2dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30.7dp"
            android:layout_marginRight="19.2dp"
            android:text="暂无消息"
            android:textColor="@color/text_bg20"
            android:textSize="13.4sp"/>
    </LinearLayout>
</LinearLayout>