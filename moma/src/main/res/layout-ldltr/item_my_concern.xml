<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/window_bg">


    <LinearLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="9.6dp">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="98dp"
            android:background="@drawable/icon_bg"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7.7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:maxLines="2"
                android:text="广州珠江新城地铁站东侧墙体广告位"
                android:textColor="#FF030303"
                android:textSize="13.4sp"/>

            <TextView
                android:id="@+id/start_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11.5dp"
                android:maxLines="2"
                android:text="2016年05月01日 起"
                android:textColor="@color/text_bg90"
                android:textSize="11.5sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13.5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/loc_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="距离875m"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>


                <TextView
                    android:id="@+id/money_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="¥0"
                    android:textColor="#FFF49A00"
                    android:textSize="13.4sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3.3dp"
                    android:text="/月"
                    android:textColor="@color/text_bg90"
                    android:textSize="11.5sp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/c_divider_line"/>

    <LinearLayout
        android:id="@+id/delete_ll"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/delete_button_bg"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16.2dp"
            android:background="@drawable/icon_delete"/>
    </LinearLayout>
</FrameLayout>